<!-- Validation failure messages -->
<% if @photo.present? %>
  <% if @photo.errors.any? %>
    <% @photo.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new listing
</h1>

<hr>

<form action="/create_photo" method="post">
  <!-- Label and input for caption -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" name="name" class="form-control" rows="3" placeholder="Name your listing">
  </div>

  <!-- Label and input for image -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @photo.try(:image) %>">
  </div>

<div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control" placeholder="Street, City, State ZIP">
  </div>
  
  <div class="form-group">
    <label for="rent">
      Rent
    </label>

    <input type="decimal" id="rent" name="rent" class="form-control">
  </div>

  <div class="form-group">
    <label for="start_date">
      Start Date
    </label>

    <input type="date" id="start_date" name="start_date" class="form-control" placeholder="06/01/2018">
  </div>

  <div class="form-group">
    <label for="end_date">
      End Date
    </label>

    <input type="date" id="end_date" name="end_date" class="form-control" placeholder="08/15/2018">
  </div>

<div class="form-group">
    <label for="description">
      Description
    </label>
  <textarea id="body" name="description" class="form-control" rows="3" placeholder="Enter description here..."></textarea>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">

    <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create listing
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
