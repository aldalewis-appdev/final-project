<!-- Validation failure messages -->
<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit listing
</h1>

<hr>

<form action="/update_photo/<%= @photo.id %>" method="post">
  <!-- Label and input for caption -->
  <div class="form-group">
    <label for="caption">
      Name
    </label>
    
    <textarea id="caption" name="caption" class="form-control" rows="3"><%= @photo.try(:caption) %></textarea>
  </div>

  <!-- Label and input for image -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @photo.image %>">
  </div>
  
  <div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control" value="<%= @photo.address %>">
  </div>
  
  <div class="form-group">
    <label for="rent">
      Rent
    </label>

    <input type="decimal" id="rent" name="rent" class="form-control" value="<%= @photo.rent %>">
  </div>

  <div class="form-group">
    <label for="start_date">
      Start Date
    </label>

    <input type="date" id="start_date" name="start_date" class="form-control" value="<%= @photo.start_date %>">
  </div>

  <div class="form-group">
    <label for="end_date">
      End Date
    </label>

    <input type="date" id="end_date" name="end_date" class="form-control" value="<%= @photo.end_date %>">
  </div>
  
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @photo.try(:description) %></textarea>
  </div>


  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
    </label>

    <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= @photo.user_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update listing
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
